/* index.wxss */


.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 100px;
}

.options {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.option-btn {
  width: 30%;
  height: 60px;
  font-size: 18px;
  background-color: #3498db;
  color: #ffffff;
  border: none;
  border-radius: 5px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}

.option-btn:hover {
  background-color: #2980b9;
}
/* index.wxss */

.text-translate {
  background-color: #3498db; /* 蓝色 */
}

.speech-translate {
  background-color: #e74c3c; /* 红色 */
}

.image-translate {
  background-color: #2ecc71; /* 绿色 */
}
.toolbar {
  position: fixed;
  top: 0;
  left: 3;
  width: 100%;
  height: 50px;
  background-color: #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
  z-index: 999;
}

.toolbar-btn {
  font-size: 16px;
  color: #333;
  border: none;
  width: 50%; /* 设置按钮宽度为 50% */
}

.history-btn {
  background-color: rgb(236, 236, 156); /* 设置历史记录按钮背景颜色为黄色 */
}

.favorite-btn {
  background-color: rgb(236, 236, 156); /* 设置收藏按钮背景颜色为黄色 */
}
